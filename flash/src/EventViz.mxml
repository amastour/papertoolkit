<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" backgroundGradientColors="[0x333333, 0x333333]" pageTitle="Event Viz" creationComplete="startEventViz();">

	<mx:Style source="styles/styles.css"/>
	<mx:Script>
		<![CDATA[
			import mx.core.UIComponent;
			import flash.events.MouseEvent;
			import flash.display.StageDisplayState;
			import eventViz.EventVizClient;

			private var container:UIComponent;
			private var viz:EventVizClient;

			public function startEventViz():void {
				trace("Starting Event Viz...");
				// more or less all the code! =)			
				container = new UIComponent();
				viz = new EventVizClient();
				viz.setDebugTextArea(debugText);
				container.addChild(viz);
				addChild(container);
			}			
		]]>
	</mx:Script>
	<mx:Label x="10" y="10" text="Paper UI Event Visualization" fontFamily="Trebuchet MS" fontWeight="bold" fontSize="28" color="#b4c1d8"/>
	<mx:VDividedBox top="10" bottom="10" right="10" width="256">
		<mx:Panel width="100%" title="Information" layout="absolute" height="67%">
			<mx:Label text="Number of Events Fired:" color="#000000" top="10" left="10"/>
			<mx:Label text="Most Recent Event:" color="#000000" top="76" left="10"/>
			<mx:Label text="Number of Regions:" color="#000000" top="140" left="10"/>
		</mx:Panel>
		<mx:TextArea editable="false" enabled="true" fontFamily="Lucida Console" fontSize="10" color="#4f4f4f" id="debugText" wordWrap="false" width="100%" height="33%"/>
	</mx:VDividedBox>
	<mx:HBox left="10" bottom="10">
		<mx:Button label="Exit" click="viz.exit(event);"/>
		<mx:Button label="Register Most Recent Pattern" click="viz.loadMappings(event);"/>
	</mx:HBox>
</mx:Application>
